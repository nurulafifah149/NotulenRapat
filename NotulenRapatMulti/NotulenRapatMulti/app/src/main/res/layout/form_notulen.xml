<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <EditText
        android:id="@+id/txt_id2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@android:drawable/editbox_background_normal"/>


    <EditText
        android:id="@+id/txt_tgl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:editable="false"
        android:focusable="false"
        android:singleLine="true"
        android:layout_marginBottom="10dp"
        android:background="@android:drawable/editbox_background_normal"
        android:hint="Tanggal" />

    <EditText
        android:id="@+id/txt_jam"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:editable="false"
        android:focusable="false"
        android:singleLine="true"
        android:background="@android:drawable/editbox_background_normal"
        android:hint="Jam" />

    <Button
        android:id="@+id/btn_get_datetime"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Date Time" />

    <EditText
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:singleLine="true"
        android:background="@android:drawable/editbox_background_normal"
        android:id="@+id/hadir"
        android:hint="Kehadiran" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lokasi"
        android:layout_marginBottom="10dp"
        android:singleLine="true"
        android:background="@android:drawable/editbox_background_normal"
        android:hint="Lokasi" />

    <RadioButton
        android:id="@+id/bulanan"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rapat Bulanan" />

    <RadioButton
        android:id="@+id/tahunan"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rapat Tahunan" />

    <RadioButton
        android:id="@+id/rptkepala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rapat Kepala Labor" />

    <EditText
        android:id="@+id/txt_topik"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Topik"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background_normal"/>

    <EditText
        android:id="@+id/txt_judul"
        android:hint="Judul"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background_normal"/>


    <EditText
        android:id="@+id/note"
        android:layout_width="380dp"
        android:layout_height="150dp"
        android:layout_below="@id/title"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:hint="Enter Note"
        android:inputType="textMultiLine"
        android:paddingTop="20dp"
        android:textSize="25sp" />

</LinearLayout>